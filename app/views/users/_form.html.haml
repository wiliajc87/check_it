= form_for(@user) do |f|
  - if @user.errors.any?
    #error_explanation
      %h2
        = pluralize(@user.errors.count, "error")
        prohibited this user from being saved:
      %ul
        - @user.errors.full_messages.each do |message|
          %li= message
  .field
    = f.label :username
    %br
      = f.text_field :username
  .field
    = f.label :email
    %br
      = f.text_field :email
  .field
    = f.label :password_digest
    %br
      = f.text_field :password_digest
  .actions
    = f.submit